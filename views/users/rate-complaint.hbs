<style>
    .card2 {
        border: 1px solid black;
        padding: 30px;
        margin-top: 40px;
        border-radius: 8px;
    }
</style>

<section>
<div class="container-md mt-3 p-5">
        <div class="card2 card-sm shadow">
            <div class="mx-auto">
                <h3 class="text-center">Rate my complaint </h3>
                <form action="/rate-complaint" enctype="multipart/form-data" method="POST" onsubmit="return validate()">
                    <input type="hidden" name="complaintId" value="{{id}}">
                    <input type="hidden" name="username" value="{{user.Fname}} {{user.Lname}}"/>
<br>
                     {{#if (eq status "Resolved")}}
                    <label for="rating">Your Rating:</label>
                    <div class="rating">
                        <input type="radio" id="star5" name="rating" value="5"><label for="star5"> 5 <i class="bi bi-star-fill" style="color: #ffc107;"></i>
                        <i class="bi bi-star-fill" style="color: #ffc107;"></i>
                          <i class="bi bi-star-fill" style="color: #ffc107;"></i>
                            <i class="bi bi-star-fill" style="color: #ffc107;"></i>
                              <i class="bi bi-star-fill" style="color: #ffc107;"></i>
                        </label><br>
                        <input type="radio" id="star4" name="rating" value="4"><label for="star4">4 <i class="bi bi-star-fill" style="color: #ffc107;"></i>
                        <i class="bi bi-star-fill" style="color: #ffc107;"></i>
                        <i class="bi bi-star-fill" style="color: #ffc107;"></i>
                          <i class="bi bi-star-fill" style="color: #ffc107;"></i>
                        </label><br>
                        <input type="radio" id="star3" name="rating" value="3"><label for="star3">3 <i class="bi bi-star-fill" style="color: #ffc107;"></i>
                           <i class="bi bi-star-fill" style="color: #ffc107;"></i>
                        <i class="bi bi-star-fill" style="color: #ffc107;"></i>
                        </label><br>
                        <input type="radio" id="star2" name="rating" value="2"><label for="star2">2 <i class="bi bi-star-fill" style="color: #ffc107;"></i>
                        <i class="bi bi-star-fill" style="color: #ffc107;"></i>
                        </label><br>
                        <input type="radio" id="star1" name="rating" value="1"><label for="star1">1<i class="bi bi-star-fill"
                                style="color: #ffc107;"></i></label>
                    </div>
                    {{/if}}
                    
                    <br>

                    <label for="">Your feedback</label>
                    <textarea id="review" id="username" name="feedback" class="form-control" rows="5"
                        placeholder="Enter your Feedback here..." required></textarea>

                    <textarea id="description" id="desc" name="description" class="form-control" rows="3"
                        placeholder="Enter your description here..." hidden></textarea>

                    <!-- Validation error message -->
                    <p id="linkErrorMessage" style="color: red;"></p>

                    <button type="submit" class="btn btn-success mt-2 w-100">Submit</button>
                </form>
            </div>
        </div>
    </div>
</section>
<script>
    function validate() {

       

        // Get the current date
        const currentDate = new Date();
        const currentDateFormatted = currentDate.toISOString(); // Format it as needed

        // Set the current date in the hidden input field
        const currentDateInput = document.getElementById('currentDate');
        currentDateInput.value = currentDateFormatted;

        // If the link is valid, clear any previous error message
        const errorElement = document.getElementById('linkErrorMessage');
        errorElement.textContent = '';

        // Allow form submission
        return true;
    }
</script>