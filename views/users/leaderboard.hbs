<br><br>
<div class="container-md mt-3 p-5">
    <h4 class="mb-3">Department Leaderboard</h4>
     <section class="section">
        <div class="row">
            <div class="col-lg-12">

                <div class="card">
                   <div class="card-body">
                   
                    
                    <table class="table">
                        <h5 class="mt-3 mb-2">Department Leaderboard</h5>
    <thead>
            <tr>
                <th>Rank</th>
                <th>Department</th>
                <th>Resolved Complaints</th>
                <th>Under Process</th>
                <th>Total Complaints</th>
              
            </tr>
        </thead>
        <tbody>
            {{#each leaderboard}}
            <tr class="{{#if (eq this.rank 1)}}table-success{{else if (eq this.rank 2)}}table-warning{{/if}}">
                <td >{{this.rank}}</td>
                <td>{{this._id}}</td>
                <td>{{this.resolvedCount}}</td>
                <td>{{this.underProcessCount}}</td>
                <td>{{this.totalComplaints}}</td>
                
            </tr>
            {{/each}}
        </tbody>
</table>

                   </div>
                </div>

            </div>
        </div>
    </section>

    </div>

