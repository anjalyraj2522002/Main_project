<div class="page-content-wrapper main-content">
    <div class="pt-3"></div>
    <div class="container-lg direction-rtl" id="printSection"> 
        <h5 class="mb-3">{{title}}</h5>
         <div class="card mb-3">
            <div class="card-body">
        
         <table class="w-100" id="dataTable">
        <thead>
            <tr>
                <th>Date</th>
                <th>Complaint ID</th>
                <th>Category</th>         
                <th>Status</th>
                <th>Updated By</th>
                <th>Updated At</th>
            </tr>
        </thead>
        <tbody>
             {{#if complaints.length}}
        {{#each complaints}}
        <tr>
            <td>{{formatDate this.date}}</td>
            <td>{{this.complaintId}}</td>
            <td>{{this.category}}</td>
            <td>{{this.status}}</td>
            <td>{{this.updatedBy}}</td>
            <td>{{formatDateTime this.updatedAt}}</td>
        </tr>
        {{/each}}
    {{else}}
        <tr>
            <td colspan="5" class="text-center text-danger">No complaints available in this period</td>
        </tr>
    {{/if}}
        </tbody>
    </table>
    </div>
         </div>
    </div>
         <button id="printReport" class="btn btn-primary">
        <i class="bi bi-printer"></i> Print Report
    </button>
     <a href="/govt/reports" class="btn btn-primary">
        back
    </a>
</div>



<script>
    document.getElementById("printReport").addEventListener("click", function () {
        let printContents = document.getElementById("printSection").innerHTML;
        let originalContents = document.body.innerHTML;

        document.body.innerHTML = printContents;
        window.print();
        document.body.innerHTML = originalContents;
        location.reload();
    });
</script>
